<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/waves"
    android:gravity="bottom"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:text="Your Codes"
            android:textColor="#150578"
            android:textSize="35dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/playerSearchButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Search Username"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:backgroundTint="#070707"
            android:textColor="#81D4FA"
            android:layout_marginRight="5dp"
            >
        </Button>
        <Button
            android:id="@+id/codeSearchButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Search Code"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:backgroundTint="#070707"
            android:textColor="#81D4FA"
            >
        </Button>
    </LinearLayout>

    <!-- codes display -->
    <ListView
        android:id="@+id/myCodesDisplay"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        android:textColor="#150578"
        />

    <!-- totals display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Codes Scanned: "
            android:textColor="#1A237E"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/codeTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_______"
            android:textColor="#1A237E"
            android:textSize="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Points Scanned: "
            android:textColor="#1A237E"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/pointTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_______"
            android:textColor="#1A237E"
            android:textSize="15dp"
            />

    </LinearLayout>



    <!-- below is the taskbar code -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8.5dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/newCodeButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/camera"
            android:background="#E1F5FE"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/leaderBoardButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/trophy"
            android:background="#E1F5FE"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/house"
            android:background="#E1F5FE"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/mapButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/map"
            android:background="#E1F5FE"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/stare"
            android:background="#E1F5FE"
            />
        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="75dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8.5dp"
        />

</LinearLayout>
