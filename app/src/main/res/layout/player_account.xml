<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/waves"
    android:gravity="bottom"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        >

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_______"
        android:textSize="25dp"
        android:textColor="#150578"
        android:paddingBottom="50dp"
        android:paddingLeft="5dp"
        android:paddingTop="25dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'s Codes"
            android:textSize="25dp"
            android:textColor="#150578"
            android:paddingBottom="50dp"
            android:paddingTop="25dp"
            />

        <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:backgroundTint="#070707"
            android:text="Close"
            android:textColor="#81D4FA"
            android:textSize="15dp" />
    </LinearLayout>

    <!-- codes display -->
    <ListView
        android:id="@+id/playerCodesDisplay"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        />

    <!-- totals display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Codes Scanned: "
            android:textColor="#150578"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/codeTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_______"
            android:textColor="#150578"
            android:textSize="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Points Scanned: "
            android:textColor="#150578"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/pointTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_______"
            android:textColor="#150578"
            android:textSize="15dp"
            android:paddingBottom="5dp"
            />

    </LinearLayout>



    <!-- below is the taskbar code -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8.5dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/newCodeButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/camera"
            android:background="#E1F5FE"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/leaderBoardButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/trophy"
            android:background="#E1F5FE"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/house"
            android:background="#E1F5FE"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />

        <ImageButton
            android:id="@+id/mapButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/map"
            android:background="#E1F5FE"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/stare"
            android:background="#E1F5FE"
            />
        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="75dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8.5dp"
        />

</LinearLayout>
