<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/darkerwaves"
    android:gravity="bottom"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textColor="#150578"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            />
        <TextView
            android:id="@+id/nameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point Value :"
            android:textColor="#150578"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            />
        <TextView
            android:id="@+id/pointsField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment :"
            android:textColor="#150578"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            />
        <TextView
            android:id="@+id/commentField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </LinearLayout>

    <Button
        android:paddingTop="100dp"
        android:id="@+id/playerScansButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Scans"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:backgroundTint="#070707"
        android:textColor="#81D4FA"
        android:visibility="invisible"
        android:layout_marginBottom="30dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image :"
            android:textColor="#150578"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BARQR :"
            android:textColor="#150578"
            android:textSize="20dp"
            android:paddingLeft="120dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/playerImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            />
        <ImageView
            android:id="@+id/barQRImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geolocation: "
        android:textColor="#150578"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/code_geolocation"
        />


    <Button
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:backgroundTint="#070707"
        android:textColor="#81D4FA"

        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8.5dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="75dp"
            />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/leaderBoardButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/trophy"
            android:background="#81D4FA"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/house"
            android:background="#81D4FA"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/mapButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/map"
            android:background="#81D4FA"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="75dp"
            />
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/stare"
            android:background="#81D4FA"
            />
        <ImageView
            android:layout_width="8.5dp"
            android:layout_height="75dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8.5dp"
        />


</LinearLayout>